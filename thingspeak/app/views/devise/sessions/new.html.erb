<div class="col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-default">
            <div class="panel-heading">
                <h4 class="breadcrumb">
                  <% if @failed %>
                    <%= t(:signin_failure) %>
                  <% else %>
                    <%= t(:signin_please) %>
                  <% end %>
                </h4>

                <% if @failed %><%= t(:signin_try_again) %><br><br><% end %>
                <% if @mail_message.present? %><%= @mail_message %><br><br><% end %>
            </div>
            <div class="panel-body">
                <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :id => 'loginform', :role => 'form' }) do |f| %>
                    <fieldset>
                        <div class="form-group">
                            <%= f.text_field :login, :value => cookies['user_id'], :class => 'form-control', :placeholder => t(:userid) %>
                        </div>
                        <div class="form-group">
                            <%= f.password_field :password, :class => 'form-control', :placeholder => t(:password) %>
                            <%= link_to t(:forgot), new_user_password_path, :id => 'forgot_password' %>
                        </div>
                        <div class="checkbox">
                            <label>
                                <%= f.check_box :remember_me, :checked => true %>
                                <%= t(:remember_me) %>
                            </label>
                        </div>
                        <!-- Change this to a button or input when using this as a form -->
                        <input type="submit" value="Login" class="btn btn-lg btn-custom btn-block">
                    </fieldset>
                <% end %>
            </div>
        </div>
        <div class="breadcrumb">
                You do not have an account ?
                <a href="/sign_up">Sign up now</a>
        </div>
    </div>
</div>

<script type="text/javascript">
  var login = document.getElementById('user_login');
  if (login.value.length === 0)
    login.focus();
  else
    document.getElementById('user_password').focus();
</script>
